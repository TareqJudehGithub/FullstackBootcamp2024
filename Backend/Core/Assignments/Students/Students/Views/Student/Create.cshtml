@model Student

@{ 
    if (Model == null)
    {
        ViewData["ActionName"] = "Create";
    }
    else
    {
        ViewData["ActionName"] = "Edit";
    }
}

<!--Page main header below depends on the action method called -->
@if (ViewData["ActionName"] == "Create")
    {
        <h2>Add New Student</h2>    
    }            
    else
    {
        <h2>Edit Student Information</h2>
     }
            


<form method="post" asp-action="@ViewData["ActionName"]">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label"  asp-for="Id" >ID</label>
        @if (ViewData["ActionName"] == "Create")
            {
                <input type="number" class="form-control" asp-for="Id">
        }
        else
            {
    <input type="number" readonly class="form-control" asp-for="Id">
            }
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StudentName" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="StudentName">
        <span class="text-danger" asp-validation-for="StudentName"></span>

    </div>

    <div class="mb-3">
        <label asp-for="StudentEmail" class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="StudentEmail">
        <span class="text-danger" asp-validation-for="StudentEmail"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StudentNationality" class="form-label">Nationality</label>
        <input type="text" class="form-control" asp-for="StudentNationality">
        <span class="text-danger" asp-validation-for="StudentNationality"></span>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City">
        <span class="text-danger" asp-validation-for="City"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DOB" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DOB">
        <span class="text-danger" asp-validation-for="DOB"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IsActive" class="form-label">Active</label>
        <input class="form-check-input m-1" type="checkbox"             
               asp-for="IsActive">
        <span class="text-danger" asp-validation-for="IsActive"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HighSchool" class="form-label">High School</label>
        <input type="text" class="form-control" asp-for="HighSchool">
        <span class="text-danger" asp-validation-for="HighSchool"></span>
    </div>

    <div class="mb-3">
        @if (ViewData["ActionName"] == "Create")
        {
            <button class="btn btn-outline-primary" type="submit">Add</button>
        }
        else
        {
            <button class="btn btn-outline-primary" type="submit">Save</button>
        }
        <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
    </div>

</form>

