@model AccountingPayroll

<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="PayrollAmount" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="PayrollAmount">
            <span asp-validation-for="PayrollAmount" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TS" class="form-label"></label>
            <input type="date" class="form-control" asp-for="TS" readonly>
            <span asp-validation-for="TS" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input class="btn btn-outline-info" type="submit" value="Save" />
            <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
        </div>

    </div>

</div>