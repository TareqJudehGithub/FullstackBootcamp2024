@model Department

@{
    if(Model == null)   // null means there's no object yet, so we ask need first to create a new one, using Create - HttpGet action.
    {
        ViewData["ActionName"] = "Create";
    
    }
    else  // if the Model is not null, this means we already have an object, so here we call the Edit - HttpGet action.
    {
        ViewData["ActionName"] = "Edit";
    }
}
<h2>@ViewData["ActionName"] Department</h2>

<form 
asp-action="@ViewData["ActionName"]" 
asp-controller="Department" 
method="post">

    <div class="mb-3">
  
        <div class="mb-3">
            <label asp-for="DepartmentName">Department Name</label>
            <input class="form-control" type="text" asp-for="DepartmentName" />
        </div>

        
        <div class="mb-5">
            @if (ViewData["ActionName"] == "Create")
            {
                <button class="btn btn-outline-info" type="submit">Add</button>
            }
            else
            {
                <button class="btn btn-outline-info" type="submit">Save</button>
            }
            <a class="btn btn-outline-danger"
               asp-action="Index"
               asp-controller="Department">
                Cancel
            </a>
        </div>
    </form>
