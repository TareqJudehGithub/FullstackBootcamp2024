@model Employee

    <h2>Add New Employee</h2>

    <form method="post" asp-action="Create" asp-controller="Employee">

        <!--Enabling the Data Annotation-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!--<div class="mb-3">
        <label  class="form-label">ID</label>
        <input type="number" class="form-control" asp-for="Id">-->
        <!--Field Validation-->
        <!--<span asp-validation-for="Id" class="text-danger"></span>
    </div>-->

        <div class="form-group mb-3">
            <label asp-for="EmployeeName" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="EmployeeName">
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EmployeeEmail" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="EmployeeEmail">
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DepartmentId"
                   class="form-label">
                Department
            </label>

            <select class="form-control "
                    asp-for="DepartmentId"
                    asp-items="@(new SelectList(ViewBag.DepartmentList, "Id", "DepartmentName"))">
                <option value="">Select Department</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="HiringDate" class="form-label">Hiring Date</label>
            <input type="date" class="form-control" asp-for="HiringDate">
        </div>

        <div class="mb-3">
            <button class="btn btn-outline-primary" type="submit">Save</button>
            <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
        </div>

    </form>