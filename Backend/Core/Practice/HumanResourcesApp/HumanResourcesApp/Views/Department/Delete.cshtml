@model Department;

    <h4>Delete Department @Model.DepartmentName?</h4>

    <table class="table m-5">

        <thead class="bg-light">
            <tr>
                <th scope="auto">ID</th>
                <th scope="auto">Department</th>
                <th scope="auto">Action</th>
            </tr>
        </thead>
        <tbody>              
            <tr>
                <td scope="row">@Html.DisplayFor(dept => Model.Id)</td>
                <td scope="row">@Html.DisplayFor(dept => Model.DepartmentName)</td>
                <td scope="row">
                     <form asp-action="Delete" asp-controller="Department" method="post">
                        <button
                            type="submit"
                           class="btn btn-outline-danger">
                           Delete
                        </button>
                         <a
                           class="btn btn-outline-info"
                           asp-action="Index" asp-controller="Department">
                           Cancel
                           </a>
                     </form>
                 </td>
            </tr>
            
        </tbody>
    </table>