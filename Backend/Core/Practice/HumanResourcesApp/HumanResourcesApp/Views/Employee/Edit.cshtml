@model Employee

<h2>Edit Employee @Model.EmployeeName information</h2>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label asp-for="EmployeeName" class="form-label"></label>
        <input type="text" class="form-control" asp-for="EmployeeName">
        <span class="text-danger" asp-validation-for="EmployeeName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EmployeeEmail" class="form-label"></label>
        <input type="email" class="form-control" asp-for="EmployeeEmail">
        <span class="text-danger" asp-validation-for="EmployeeEmail"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="BasicSalary"></label>
        <input class="form-control" type="number" asp-for="BasicSalary" />
        <span class="text-danger" asp-validation-for="BasicSalary"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label"></label>
        <select class="form-control"
                asp-for="DepartmentId"
                asp-items="@(new SelectList(ViewBag.DepartmentList, "Id", "DepartmentName"))">
            <option value="">Select Department</option>
        </select>
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>

    <div class="mb-5">
        <label asp-for="HiringDate" class="form-label"></label>
        <input class="form-control" type="date" asp-for="HiringDate">
    </div>

    <div class="mb-3">
        <button class="btn btn-outline-primary" type="submit">Save</button>
        <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
